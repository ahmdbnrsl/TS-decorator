{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "module": "CommonJS",
        "outDir": "dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "checkJs": true,
        "experimentalDecorators": true
    }
}
